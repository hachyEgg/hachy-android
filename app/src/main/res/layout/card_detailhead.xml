<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp">

    <!-- A CardView that contains a TextView -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/egg_yellow"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="20dp">

        <ImageView
            android:id="@+id/imgview_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:contentDescription="picture of egg"
            android:scaleType="fitCenter"
            android:src="@drawable/stg2_t" />

        <TextView
            android:id="@+id/egg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This egg has no embryo development"
            android:textColor="@color/egg_white"
            android:textSize="19.5sp" />

    </LinearLayout>
</LinearLayout>